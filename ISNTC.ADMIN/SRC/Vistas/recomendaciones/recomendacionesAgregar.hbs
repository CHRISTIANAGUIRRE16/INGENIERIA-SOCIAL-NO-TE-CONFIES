<link rel="stylesheet" href="/css/recomendaciones/recomendacionesAgregar.css">
<div id="logo">
    <img src="/imagenes/logo.png" alt="">
</div>
<div id="contenedor">
    <form action="/recomendaciones/recomendacionesAgregar/{{user.idUsuarios}}" method="post">
    <div id="titulo">
        <p>Agregar recomendaciones</p>
    </div>
    <div id="Recomendacion">
        <label>Recomendación</label>
        <input type="text" name="recomendacion" required>
    </div>
    <div id="DescripcionRecomendacion">
        <label>Ingrese su descripción sobre la recomendación</label>
        <input type="text" name="descripcionRecomendacion" required>

    <div id="boton">
        <button type="submit">GUARDAR</button>
    </div>
    </form>
</div>