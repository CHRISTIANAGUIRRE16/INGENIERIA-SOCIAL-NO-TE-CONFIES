<link rel="stylesheet" href="/css/comentarios/comentariosLista.css">
<div id="logo">
    <img src="/imagenes/logo.png" alt="">
</div>
<form action="/comentarios/comentariosLista/{{user.idUsuarios}}" method="get"></form>
<div id="titulo">
        <p>Comentarios</p>
    </div>
<div id="contenedor">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="comentarios">
                <h2>Comentarios</h2>
                <p>{{comentarios}}</p>
            </div>
            <div id="boton">
                <div id="editar">
                    <a href="/comentarios/comentariosEditar/{{idComentarios}}"><button type="button">Editar</button></a>
                </div>
                <div id="agregar">
                    <a href="/comentarios/comentariosAgregar/{{idComentarios}}"><button type="button">Agregar</button></a>
                </div>
                <div id="eliminar">
                    <a href="/comentarios/eliminar/{{idComentarios}}"><button type="button">Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>