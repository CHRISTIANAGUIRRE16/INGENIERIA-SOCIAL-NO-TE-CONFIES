<link rel="stylesheet" href="/css/experiencias/experienciasLista.css">
<div id="logo">
    <img src="/imagenes/logo.png" alt="">
</div>
<form action="/experiencias/experienciasLista/{{user.idUsuarios}}" method="get"></form>
    <div id="titulo">
        <p>Experiencias</p>
    </div>
<div id="contenedor">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="tema">
                <h2>Tema experiencia</h2>
                <p>{{temaExperiencias}}</p>
            </div>
            <div id="fecha">
                <h2>Fecha experiencia</h2>
                <p>{{fechaExperiencias}}</p>
            </div>
            <div id="video">
                <h2>Detalle Experiencia</h2>
                <p>{{videoExperiencias}}</p>
            </div>
            <div id="boton">
                <div id="editar">
                    <a href="/experiencias/experienciasEditar/{{idExperiencias}}"style="text-decoration: none"><button type="button">Editar</button></a>
                </div>
                <div id="agregar">
                    <a href="/experiencias/experienciasAgregar/{{idExperiencias}}"style="text-decoration: none"><button type="button">Agregar</button></a>
                </div>
                <div id="eliminar">
                    <a href="/experiencias/eliminar/{{idExperiencias}}"style="text-decoration: none"><button type="button">Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>