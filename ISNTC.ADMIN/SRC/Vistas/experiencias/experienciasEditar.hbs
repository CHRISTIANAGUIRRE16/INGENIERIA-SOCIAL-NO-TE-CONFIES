<link rel="stylesheet" href="/css/experiencias/experienciasEditar.css">
<div id="fond">
    <img src="/imagenes/fondo.jpeg" alt="">
</div>
<div id="contenedor">
    {{#each lista}}
    <form action="/experiencias/experienciasEditar/{{idExperiencia}}" method="post">
    <div id="titulo">
        <p>Agregar experiencias</p>
    </div>
    <div id="AgregarNombre">
        <label>Agregar Nombre:</label>
        <input type="text" name="agregarNombre" value="{{agregarNombre}}" required>
    </div>
    <div id="AgregarExperiencia">
        <label>Describa su experiencia:</label>
        <input type="text" name="agregarExperiencia" value="{{agregarExperiencia}}" required>
    </div>
    <div id="boton">
        <button type="submit">Actualizar</button>
    </div>
    </form>
    {{/each}}
</div>